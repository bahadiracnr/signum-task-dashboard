# Generates completions for the options and subcommands of the `repair` subcommand.
function _picocli_neo4j-migrations_repair() {
  # Get completion data
  local curr_word=${COMP_WORDS[COMP_CWORD]}

  local commands=""
  local flag_opts=""
  local arg_opts=""

  if [[ "${curr_word}" == -* ]]; then
