# Generates completions for the options and subcommands of the `run` subcommand.
function _picocli_neo4j-migrations_run() {
  # Get completion data
  local curr_word=${COMP_WORDS[COMP_CWORD]}
  local prev_word=${COMP_WORDS[COMP_CWORD-1]}

  local commands=""
  local flag_opts=""
  local arg_opts="--migration"

  type compopt &>/dev/null && compopt +o default

  case ${prev_word} in
    --migration)
      return
      ;;
  esac

  if [[ "${curr_word}" == -* ]]; then
    COMPREPLY=( $(compgen -W "${flag_opts} ${arg_opts}" -- "${curr_word}") )
  else
    local positionals=""
    local IFS=$'\n'
    COMPREPLY=( $(compgen -W "${commands// /$'\n'}${IFS}${positionals}" -- "${curr_word}") )
  fi
}

# Generates completions for the options and subcommands of the `show-catalog` subcommand.
function _picocli_neo4j-migrations_showcatalog() {
  # Get completion data
  local curr_word=${COMP_WORDS[COMP_CWORD]}
  local prev_word=${COMP_WORDS[COMP_CWORD-1]}

  local commands=""
  local flag_opts=""
  local arg_opts="mode format version"
  local mode_option_args=("LOCAL" "REMOTE") # mode values
  local format_option_args=("CYPHER" "XML") # format values

  type compopt &>/dev/null && compopt +o default

  case ${prev_word} in
    mode)
      local IFS=$'\n'
      COMPREPLY=( $( compReplyArray "${mode_option_args[@]}" ) )
      return $?
      ;;
    format)
      local IFS=$'\n'
      COMPREPLY=( $( compReplyArray "${format_option_args[@]}" ) )
      return $?
      ;;
    version)
      return
      ;;
  esac

  if [[ "${curr_word}" == -* ]]; then
    COMPREPLY=( $(compgen -W "${flag_opts} ${arg_opts}" -- "${curr_word}") )
  else
    local positionals=""
    local IFS=$'\n'
    COMPREPLY=( $(compgen -W "${commands// /$'\n'}${IFS}${positionals}" -- "${curr_word}") )
  fi
}

